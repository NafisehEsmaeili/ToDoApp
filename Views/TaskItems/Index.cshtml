@model List<ToDoApp.ViewModels.TaskItemViewModel>

<h2>Task List</h2>

<!-- Button to navigate to the Create Task page -->
<a href="/TaskItems/Create" n("Create", "TaskItem" )" class="btn btn-primary mb-3">
    Create New Task
</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Category</th>
            <th>Priority</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@task.Category</td>
                <td>@task.Priority</td>
               
            </tr>
        }
    </tbody>
</table>
