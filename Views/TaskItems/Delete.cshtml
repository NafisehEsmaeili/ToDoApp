@model ToDoApp.Models.TaskItem

<h2>Delete Task</h2>

<h3>Are you sure you want to delete this task?</h3>
<div>
    <strong>Title:</strong> @Model.Title <br />
    <strong>Description:</strong> @Model.Description <br />
    <strong>Due Date:</strong> @Model.DueDate.ToString("yyyy-MM-dd") <br />
    <strong>Category:</strong> @Model.Category <br />
    <strong>Priority:</strong> @Model.Priority <br />
</div>

<form method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
